extends layout

block content
	h1= title
	p Welcome to #{title}

	div
		table(style='width: 80%', border='2')
			thead
					tr
						th Sensor
						th Value
						th Unit
						th Updated at
						th Update Now
				tbody
					- for datum in sensorData
						tr
							td= datum.sensor
							td(id= datum.sensor + "_val")= datum.value
							td= datum.unit
							td(id= datum.sensor + "_upd")= datum.updatedAt
							td(style="width:15%") 
								button(style="width: 100%" id=datum.sensor class="upd_btn") Update

block scripts
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="/javascript/main.js")